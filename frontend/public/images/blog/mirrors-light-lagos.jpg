<svg width="800" height="600" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="wallGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#F8F8F0;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#F3F3E0;stop-opacity:1" />
    </linearGradient>
    <radialGradient id="lightGradient" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:#FFFACD;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#FFFACD;stop-opacity:0.2" />
    </radialGradient>
  </defs>
  
  <!-- Room background -->
  <rect width="800" height="600" fill="url(#wallGradient)"/>
  
  <!-- Floor -->
  <rect x="0" y="500" width="800" height="100" fill="#E8E8E0"/>
  
  <!-- Main window -->
  <rect x="600" y="100" width="150" height="300" fill="#87CEEB" stroke="#236B7C" stroke-width="3"/>
  <line x1="675" y1="100" x2="675" y2="400" stroke="#236B7C" stroke-width="2"/>
  <line x1="600" y1="250" x2="750" y2="250" stroke="#236B7C" stroke-width="2"/>
  
  <!-- Sunlight coming through window -->
  <ellipse cx="675" cy="250" rx="200" ry="150" fill="url(#lightGradient)"/>
  
  <!-- Large mirror opposite window -->
  <rect x="50" y="120" width="120" height="280" fill="#F0F8FF" stroke="#C0C0C0" stroke-width="4"/>
  <rect x="60" y="130" width="100" height="260" fill="#E6F3FF" opacity="0.6"/>
  
  <!-- Reflected light from mirror -->
  <ellipse cx="110" cy="260" rx="150" ry="120" fill="url(#lightGradient)"/>
  
  <!-- Small mirrors creating gallery wall -->
  <rect x="250" y="150" width="60" height="80" fill="#F0F8FF" stroke="#C0C0C0" stroke-width="2"/>
  <rect x="320" y="180" width="50" height="70" fill="#F0F8FF" stroke="#C0C0C0" stroke-width="2"/>
  <rect x="380" y="160" width="55" height="75" fill="#F0F8FF" stroke="#C0C0C0" stroke-width="2"/>
  
  <!-- Side table -->
  <rect x="500" y="420" width="80" height="40" fill="#D98958"/>
  <rect x="510" y="460" width="4" height="40" fill="#B8734A"/>
  <rect x="570" y="460" width="4" height="40" fill="#B8734A"/>
  
  <!-- Decorative plant -->
  <ellipse cx="540" cy="400" rx="20" ry="30" fill="#228B22"/>
  
  <!-- Light reflections -->
  <circle cx="300" cy="200" r="15" fill="#FFFACD" opacity="0.5"/>
  <circle cx="350" cy="220" r="12" fill="#FFFACD" opacity="0.4"/>
  <circle cx="400" cy="190" r="18" fill="#FFFACD" opacity="0.6"/>
  
  <!-- Metallic accents -->
  <circle cx="480" cy="300" r="8" fill="#FFD700"/>
  <rect x="200" y="350" width="30" height="15" fill="#C0C0C0"/>
  
  <!-- Text overlay -->
  <text x="400" y="550" text-anchor="middle" font-family="Arial, sans-serif" font-size="22" font-weight="bold" fill="#236B7C">Strategic Mirror Placement</text>
  <text x="400" y="575" text-anchor="middle" font-family="Arial, sans-serif" font-size="14" fill="#666">Mirrors reflect natural light and create depth</text>
</svg> 